<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Report">
    <insert id="report" parameterType="report">
        INSERT INTO report(reportUser,reportedUser,type,content,boardId,title)
        VALUES(#{reportUser},#{reportedUser},#{type},#{content},#{boardId},#{title});
    </insert>
    <insert id="reportComment" parameterType="report">
        INSERT INTO report(reportUser,reportedUser,type,content,boardId,title,commentId)
        VALUES(#{reportUser},#{reportedUser},#{type},#{content},#{boardId},#{title},#{commentId});
    </insert>
    <select id="getReportById" parameterType="int" resultType="report">
        SELECT * FROM report WHERE id=#{reportId};
    </select>

</mapper>